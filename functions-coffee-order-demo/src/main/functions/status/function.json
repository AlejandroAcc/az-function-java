{
  "scriptFile": "../functions-coffee-order.jar",
  "entryPoint": "com.microsoft.serverless.coffeeorder.OrderManager.getStatus",
  "bindings": [
    {
      "type": "httpTrigger",
      "name": "req",
      "direction": "in",
      "authLevel": "anonymous",
      "methods": [ "get" ],
      "route": "orders/{id}/status"
    },
    {
      "type": "table",
      "name": "order",
      "direction": "in",
      "tableName": "orders",
      "partitionKey": "CustomerOrder",
      "rowKey": "{id}",
      "connection": "AzureWebJobsSampleStorage"
    },
    {
      "type": "http",
      "name": "$return",
      "direction": "out"
    }
  ]
}
